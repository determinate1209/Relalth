<h3><%= menu.comments.count %>件のコメント</h3>
<% menu.comments.each do |comment| %>
  <%= link_to admin_customer_path(comment.customer) do %>
    <%= comment.customer.last_name + comment.customer.first_name %>
  <% end %>
  <%= comment.comment %>
  <%= link_to "削除", admin_menu_comment_path(comment.menu_id,comment.id), method: :delete, remote: true , "data-confirm" => "本当に消しますか？"%><br />
  
<% end %>





