<h3>ジャンル検索</h3>

  <%= form_tag(menus_path, method: :get) do %>
    <%= select_tag :plan_id, options_from_collection_for_select( Plan.all, :id, :name) %>
    <%= submit_tag '検索する' %>
  <% end %>

<h3>
  <% if @plan.present? %>
    <%= @plan.name %>一覧<br />
    <%= link_to "全ての一覧へ戻る", menus_path %>
  <% else %>
    メニュー一覧
  <% end %>
</h3>

<% @menus.each do |menu| %>
  
  <%= link_to admin_menu_path(menu.id) do %>
    <%= menu.name %>
  <% end %>
  
  <%= menu.description %>
  
    <%= link_to "編集する", edit_admin_menu_path(menu.id) %>
    <%= link_to "削除する", admin_menu_path(menu.id), method: :delete %><br />
    
    
  
<% end %>


