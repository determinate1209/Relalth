<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h3 class="page-title">メニュー一覧</h3>
    </div>
    <div class="col-md-6 col-sm-12">
      <div class="d-flex justify-content-end mb-５">
        <div class="form-inline d-block text-right">
          <%= form_tag(admin_menus_path, method: :get) do %>
            <%= select_tag :site_name, options_for_select({ "全て" => "ichiran", "全身" => "body", "肩" => "shoulder",
                                                            "腰" => "waist", "脚" => "leg", "膝" => "knee"}),class: "page-text" %>
            <%= button_tag type: 'submit' do %>
              <i class="fas fa-search"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="px-md-5 col-sm-12">
  <div id="admin-menus-index" class="row mx-md-5 px-5">
    <%= render "admin/menus/index", menus: @menus %>
  </div>
</div>

