<table class="table table-bordered table-hover table-background">
  <thead class="thead-light">
    <tr>
      <th class="page-text">会員ID</th>
      <th class="page-text">氏名</th>
      <th class="page-text">メールアドレス</th>
      <th class="page-text">ステータス</th>
    </tr>
  </thead>
  <tbody>
     <% customers.each do |customer| %>
      <tr onclick='window.location="<%= '/admin/customers/' + customer.id.to_s %>"' role="link">
        <td class="page-text"><%= customer.id %></td>
        <td class="page-text">
          <%= customer.last_name+customer.first_name %>

        </td>
        <td class="page-text"><%= customer.email %></td>
        <% if customer.is_deleted == true %>
          <td class="text-danger btn-text">退会</td>
        <% else %>
          <td class="text-success btn-text">有効</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate customers %>