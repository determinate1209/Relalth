<div class='row'>
 <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto"> 
<%= render 'layouts/errors', obj: @customer %>
<h3>会員情報編集</h3>
  <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
  
    <div class="form-group">
      <%= f.label :名前 %>
          <%= f.label :（姓） %>
          <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
          <%= f.label :（名）%>
      	  <%= f.text_field :first_name, class: "form-control" %>
    </div>


    <div class="form-group">
      <%= f.label :user_name, 'コメント投稿時の表示名' %>
      <%= f.text_field :user_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.text_field :email, autocomplete: "email", class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :is_deleted, '会員ステータス' %>
        <%= f.radio_button :is_deleted, false %> <%= f.label :is_active, "有効" %>
        <%= f.radio_button :is_deleted, true %> <%= f.label :is_active, "退会" %>
    </div>

    <div>
      <%= f.submit "編集内容を保存",class: "btn btn-success" %>
    </div>

  <% end %>
