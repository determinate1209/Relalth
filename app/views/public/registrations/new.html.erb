<div class="col-9 offset-1">
  <h3 class="mb-5 mini-title">新規会員登録</h3>
  <div class="row">
    <%= render "public/shared/error_messages", resource: resource %>
  </div>
  <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
    <div class="form-group row">
      <%= f.label :名前, class: "col-md-3" %>
        <%= f.label "(姓)", class: "col-md-1" %>
        <%= f.text_field :last_name, autocomplete: "last_name", placeholder: '健康', class: "form-control col-md-3" %>
        <%= f.label "(名)", class: "col-md-1" %>
        <%= f.text_field :first_name, autocomplete: "first_name", placeholder: '太郎', class: "form-control col-md-3"  %>
    </div>  
  
    <div class="form-group row">
      <%= f.label "メールアドレス", class: "col-md-4" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', class: "form-control col-md-3" %>
    </div>
    
    <div class="form-group row">
      <%= f.label "ユーザーネーム", class: "col-md-4" %>
      <%= f.text_field :user_name, autocomplete: "user_name", placeholder: 'ユーザーネーム', class: "form-control col-md-3" %>
    </div>
  
    <div class="form-group row">
      <%= f.label "パスワード(6文字以上）", class: "col-md-4" %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: 'パスワード（6文字以上）', class: "form-control col-md-3" %>
    </div>
  
    <div class="form-group row">
      <%= f.label "パスワード確認", class: "col-md-4" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'パスワード確認（6文字以上）', class: "form-control col-md-3" %>
    </div>
    <div class="actions form-group row">
      <div class="col-md-4"></div>
        <%= f.submit "会員登録",class: "btn btn-info" %>
    </div>
  <% end %>
  <div class="field mx-auto text-center mt-5">
    <%= link_to "既に登録済みの方はこちらから", new_customer_session_path %>
  </div>
</div>
