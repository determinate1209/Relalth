
  <div class="row">
      <div class="col-sm-12 col-md-4 px-5">
        <h3 class="page-title">会員情報</h3>
        <table class="table table-bordered">
          <tr>
            <th class="page-text">（姓）:</th>
            <td class="page-text"><%= current_customer.last_name %></td>
          </tr>
          <tr>
            <th class="page-text">（名）:</th>
            <td class="page-text"><%= current_customer.first_name %></td>
          </tr>
          <tr>
            <th class="page-text">ユーザーネーム:</th>
            <td class="page-text"><%= current_customer.user_name %></td>
          </tr>
          <tr>
            <th class="page-text">メールアドレス:</th>
            <td class="page-text"><%= current_customer.email %></td>
          </tr>
        </table>
          <%= link_to "会員情報を編集", customer_edit_path, class: "btn btn-success mb-5" %>
      </div>
      
      <div class="col-sm-12 col-md-4 px-5">
        <h3 class="page-title">投稿したメニュー</h3>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th class="page-text">メニュー名</th>
              <th class="page-text">説明</th>
            </tr>
          </thead>
          <% current_customer.menus.each do |menu| %>
            <tbody>
              <tr>
                <td class="page-text">
                  <%= menu.name %>
                </td>
                <td class="page-text">
                  <%= menu.description %><br />
                  <br />
                  <%= link_to "内容を見る", menu_path(menu.id),class: "btn btn-outline-info justify-content-end" %><br />
                  <%= link_to "詳細を変更",edit_menu_path(menu.id),class: "btn btn-outline-success justify-content-end" %>
                </td>
              </tr>
            </tbody>
          <% end %>
        </table>
      </div>
      
      <div class="col-sm-12 col-md-4 px-5 mb-5">
        <h3 class="page-title">お気に入り一覧</h3>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th class="page-text">メニュー名</th>
              <th class="page-text">説明</th>
            </tr>
          </thead>
           <% @bookmark_menu.each do |menu| %>
            <tbody>
              <tr>
                <td class="page-text">
                  <%= menu.name %>
                </td>
                <td class="page-text">
                  <%= menu.description %><br />
                  <br />
                  <%= link_to "内容を見る", menu_path(menu.id),class: "btn btn-outline-info justify-content-end" %>
                </td>
              </tr>
            </tbody>
          <% end %>
        </table>
      </div>
      
  </div>

     