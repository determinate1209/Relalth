<div class="container">
  <div class="row  offset-1 mb-3">
    <div class="col-lg-6">
      <h3 class="page-title">メニュー一覧</h3>
    </div>
    <div class="col-md-6 col-sm-12">
      <div class="d-flex justify-content-end mb-５">
        
        
        <div class="form-inline d-block text-right">
          <p><%= link_to "メニュー作成", new_menu_path,class: "btn btn-outline-info" %></p>
            <%= form_tag(menus_path, method: :get) do %>
              <%= select_tag :site_name, options_for_select({ "全て" => "ichiran", "膝" => "knee", "脚" => "leg",
                                                              "腰" => "waist", "肩" => "shoulder","全身" => "body"}), class: "page-text" %>
              <%= button_tag type: 'submit' do %>
                <i class="fas fa-search"></i>
              <% end %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="px-md-5 col-sm-12">
  <div class="row mx-md-5">
    <% if @menus.count == 0 %>
      <p class="page-text">まだ、メニューが投稿されていません。</p>
    <% else %>
        <table class="table mx-5 table-hover table-inverse">
          <% @menus.each do |menu| %>
            <thead class="thead-ligit">
              <tr>
                <th class="page-text" style="width: 50%;">メニュー名:　<%= menu.name %></th>
                <th class="text-right page-text" style="width: 50%;">部位:<%= menu.site_name_i18n %></th>
              </tr>
            </thead>
            
            <tbody>
            <tr>
              <td class="text-center page-text"><%= menu.description %></td>
              <td class="text-right page-text">
              <%= link_to "内容を見る", menu_path(menu.id),class: "btn btn-outline-info justify-content-end" %>
              <% if menu.customer == current_customer %>
                <%= link_to "詳細を変更",edit_menu_path(menu.id),class: "btn btn-outline-success justify-content-end" %>
              <% end %>
              </td>
              
            </tr>
          <% end %>
        </table>
        <div class="col-12">
          <%= paginate @menus %>
        </div>
    <% end %>
  </div>
</div>
  


