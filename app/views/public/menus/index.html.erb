<h3>メニュー一覧</h3>
<% @menus.each do |menu| %>
  
  <%= link_to menu_path(menu.id) do %>
    <%= menu.name %>
  <% end %>
  
  <%= menu.description %>
  <% if menu.customer == current_customer %>
    <%= link_to "編集する", edit_menu_path(menu.id) %>
    <%= link_to "削除する", menu_path(menu.id), method: :delete,"data-confirm" => "本当に消しますか？" %><br />
    
  <% end %>
<% end %>
<%= link_to "メニューを作成", new_menu_path %>

