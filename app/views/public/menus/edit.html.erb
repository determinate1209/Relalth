<h3>メニュー編集</h3>
<%= form_with model: @menu, url: menu_path, method: :patch do |f| %>
 <%= f.label "メニュー名" %><br />
 <%= f.text_field :name %><br />
 
 <%= f.label "メニュー説明" %><br />
 <%= f.text_area :description %><br />
 
 <%= f.label :プラン %><br />
 <%= f.select :plan_id, options_from_collection_for_select(Plan.all, :id, :name), { prompt: '選択してください' } %><br />
 
 <%= f.submit "メニューを編集" %>
 
<% end %>
