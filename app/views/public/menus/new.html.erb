<div class='row'>
 <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">  
  <%= render 'layouts/errors', obj: @menu %>
  
  <h3 class="page-title">メニュー作成</h3>
  <%= form_with model: @menu, url: menus_path do |f| %>
  <div class="form-group">
   <%= f.label "メニュー名", class: "page-text" %><br />
   <%= f.text_field :name, class: "form-control page-text" %>
  </div>
  <div class="form-group">
   <%= f.label "メニュー説明",class: "page-text" %><br />
   <%= f.text_area :description, class: "form-control page-text" %><br />
  </div>
  <div class="form-group">
   <%= f.label :部位は？, class: "page-text" %><br />
   <%= f.select :site_name, Menu.site_names_i18n.keys.map { |k| [t("enums.menu.site_name.#{k}"), k] }, class: "page-text" %><br />
  </div>
  <div class="form-group">
   <%= f.label :症状は？, class: "page-text" %><br />
   <%= f.select :plan_name, Menu.plan_names_i18n.keys.map { |k| [t("enums.menu.plan_name.#{k}"), k] },class: "page-text" %><br />
  </div>
  
   <%= f.submit "メニューを作成",class: "btn btn-success" %>
 
  <% end %>
 </div>
</div>