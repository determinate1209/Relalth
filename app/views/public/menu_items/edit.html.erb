<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">  
    <%= render 'layouts/errors', obj: @menu_item %>
    <h3 class="page-title">ストレッチ内容編集</h3>
    <%= form_with model: [@menu, @menu_item], url: menu_menu_item_path, method: :patch do |f| %>
    
    <div class="form-group">
       <%= f.label "ストレッチ画像", class: "page-text" %><br />
      <%= f.file_field :image, accept: "image/*", class: "form-control-file page-text" %><br />
    </div>
    <div class="form-group">
      <%= f.label "ストレッチの説明", class: "page-text" %><br />
      <%= f.text_area :description, class: "form-control page-text" %><br />
    </div>
    <div class="form-group">
      <%= f.label "手順", class: "page-text" %>
      <%= f.select :stretch_number,*[1..10], class: "form-control page" %><br />
    </div>
      <%= f.submit "メニュー内容を編集",class: "btn btn-success" %>
    <% end %>
  </div>
</div>

