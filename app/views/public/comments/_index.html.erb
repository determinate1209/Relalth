<h3 class="my-5 page-text">コメント一覧</h3>
<% if @comments.count == 0 %>
  <p class="page-text">現在、このメニューにコメントはありません。</p>
<% else %>
  <table class="table table-hover table-inverse">
    <% comments.each do |comment| %>
    <tr>
      <td class="text-left page-text"><%= comment.customer.user_name %></td>
      <td class="text-right page-text">
        <%= comment.comment %><br />
        <% if comment.customer == current_customer || menu.customer == current_customer %>
          <!--コメントした人または、このメニューを投稿した人-->
          <%= link_to "削除", menu_comment_path(comment.menu_id,comment.id), method: :delete, remote: true, class: "btn-text" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
<% end %>
